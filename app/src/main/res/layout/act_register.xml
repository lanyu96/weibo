<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/blue"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <!--<View-->

    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:background="#f888" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout style="@style/my_ll_row">
                    <TextView
                        style="@style/my_tv_key"
                        android:text="账        号" />
                    <EditText
                        android:id="@+id/tv_person_name"
                        android:hint="请输入"
                        style="@style/my_tv_value" />

                    <ImageView
                        style="@style/my_iv_click"
                        android:visibility="invisible" />
                </LinearLayout>

                <View style="@style/v_row_devide" />

                <LinearLayout style="@style/my_ll_row">
                    <TextView
                        style="@style/my_tv_key"
                        android:text="手  机  号" />
                    <EditText
                        android:id="@+id/tv_person_phone"
                        android:hint="请输入"
                        style="@style/my_tv_value" />
                    <ImageView
                        style="@style/my_iv_click"
                        android:visibility="invisible" />
                </LinearLayout>



                <View style="@style/v_row_devide" />


                <LinearLayout
                    android:id="@+id/ll_person_farm"
                    style="@style/my_ll_row">

                    <TextView
                        style="@style/my_tv_key"

                        android:text="微  信  号" />

                    <EditText
                        android:id="@+id/tv_person_wx"
                        android:hint="请输入"
                        style="@style/my_tv_value" />

                    <ImageView style="@style/my_iv_click"
                        android:visibility="invisible"/>
                </LinearLayout>

                <View style="@style/v_row_devide" />


                <LinearLayout
                    android:id="@+id/ll_person_feild"
                    style="@style/my_ll_row">

                    <TextView
                        style="@style/my_tv_key"

                        android:text="微  博  名" />

                    <EditText
                        android:id="@+id/tv_person_wb"
                        android:hint="请输入"
                        style="@style/my_tv_value" />

                    <ImageView style="@style/my_iv_click"
                        android:visibility="invisible"/>
                </LinearLayout>
                <View style="@style/v_row_devide" />

                <LinearLayout
                    android:id="@+id/fragment_person_modify_password_ll"
                    style="@style/my_ll_row">

                    <TextView
                        style="@style/my_tv_key"

                        android:text="平均报价" />

                    <EditText
                        android:id="@+id/tv_person_baojia"
                        android:hint="？？？元"
                        style="@style/my_tv_value" />

                    <ImageView style="@style/my_iv_click"
                        android:visibility="invisible"/>
                </LinearLayout>
                <View style="@style/v_row_devide" />

                <LinearLayout
                    style="@style/my_ll_row">

                    <TextView
                        style="@style/my_tv_key"

                        android:text="粉        丝" />

                    <EditText
                        android:id="@+id/tv_person_fensi"
                        android:hint="请填写数字(单位是万)"
                        style="@style/my_tv_value" />

                    <ImageView style="@style/my_iv_click"
                        android:visibility="invisible"/>
                </LinearLayout>
                <View style="@style/v_row_devide" />


                <LinearLayout
                    android:visibility="gone"
                    style="@style/my_ll_row">

                    <TextView
                        style="@style/my_tv_key"

                        android:text="金   /   黄" />

                    <EditText
                        android:id="@+id/tv_person_jin_huang"
                        android:hint="请输入"
                        style="@style/my_tv_value" />

                    <ImageView style="@style/my_iv_click"
                        android:visibility="invisible"/>
                </LinearLayout>
                <View style="@style/v_row_devide" />

                <LinearLayout

                    style="@style/my_ll_row">

                    <TextView
                        style="@style/my_tv_key"

                        android:text="主页地址" />

                    <EditText
                        android:id="@+id/tv_person_index"
                        android:hint="填写以https开头的地址"
                        style="@style/my_tv_value" />

                    <ImageView style="@style/my_iv_click"
                        android:visibility="invisible"/>
                </LinearLayout>
                <View style="@style/v_row_devide" />

                <LinearLayout

                    style="@style/my_ll_row">

                    <TextView
                        style="@style/my_tv_key"

                        android:text="是否宣传账号" />

                    <com.suke.widget.SwitchButton
                        android:id="@+id/tv_person_switch_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView style="@style/my_iv_click"
                        android:visibility="invisible"/>
                </LinearLayout>
                <View style="@style/v_row_devide" />

            </LinearLayout>



            <TextView
                android:id="@+id/tv_person_save"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/gray_deep"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
