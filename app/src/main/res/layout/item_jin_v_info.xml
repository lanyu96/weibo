<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_jin_v_info_head_civ"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />


        <TextView

            style="@style/item_jin_v_value"
            android:id="@+id/item_jin_v_user_tv"
            android:layout_weight="0.4"
            android:text="value" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <TextView

            style="@style/item_jin_v_key"
            android:text="昵称 :" />
        <TextView

            style="@style/item_jin_v_value"
            android:id="@+id/item_jin_v_info_wb_name_tv"
            android:layout_weight="1.6"
            android:text="value" />



        <TextView

            style="@style/item_jin_v_key"
            android:text="粉丝 :" />

        <TextView

            style="@style/item_jin_v_value"
            android:id="@+id/item_jin_v_info_love_tv"
            android:text="value" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <TextView

            style="@style/item_jin_v_key"
            android:text="报价 :" />

        <TextView

            style="@style/item_jin_v_value"
            android:id="@+id/item_jin_v_info_money_tv"
            android:text="value" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"

        android:orientation="horizontal">

        <!--<TextView-->

            <!--style="@style/item_jin_v_key"-->
            <!--android:layout_weight="1.5"-->
            <!--android:text="微博名 :" />-->


        <!--<View-->
            <!--android:layout_width="5dp"-->
            <!--android:layout_height="match_parent" />-->
        <TextView
            style="@style/item_jin_v_key"
            android:layout_marginLeft="12dp"
            android:text="主页链接 : " />

        <TextView
            android:id="@+id/item_jin_v_info_index_src"
            style="@style/item_jin_v_value"
            android:layout_width="0dp"
            android:layout_weight="3.5"


            android:text="value" />


    </LinearLayout>
    </LinearLayout>

</LinearLayout>